@using Microsoft.AspNetCore.Http.Features;
@using IstanbulLMC.ViewModel;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model LoginVM;
@{
    Layout = null;

    var consentFeature = Context.Features.Get<ITrackingConsentFeature>();
    var showBanner = !consentFeature?.CanTrack ?? false;
    var cookieString = consentFeature?.CreateConsentCookie();
}

<!doctype html>
<html lang="tr" data-layout="vertical" data-topbar="light" data-sidebar="dark" data-sidebar-size="lg" data-sidebar-image="none" data-preloader="disable">

<head>
    <meta charset="utf-8" />
    <title> LMC | Management Panel</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="shortcut icon" href="/admin/images/favicon.ico">

    <link href="/admin/libs/sweetalert2/sweetalert2.min.css" rel="stylesheet" type="text/css" />
    <script src="/admin/js/layout.js"></script>
    <link href="/admin/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="/admin/css/icons.min.css" rel="stylesheet" type="text/css" />
    <link href="/admin/css/app.min.css" rel="stylesheet" type="text/css" />
    <link href="/admin/css/custom.css" rel="stylesheet" type="text/css" />
</head>

<body>

    <div class="auth-page-wrapper pt-5 ">

        <div class="auth-one-bg-position auth-one-bg" id="auth-particles">
            <div class="bg-overlay"></div>

            <div class="shape">
                <svg xmlns="http://www.w3.org/2000/svg" version="1.1" xmlns:xlink="http://www.w3.org/1999/xlink" viewBox="0 0 1440 120">
                    <path d="M 0,36 C 144,53.6 432,123.2 720,124 C 1008,124.8 1296,56.8 1440,40L1440 140L0 140z"></path>
                </svg>
            </div>
        </div>
        <div class="auth-page-content">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="text-center mt-sm-5 mb-4 text-white-50">
                            <div>
                                <a href="/" class="d-inline-block auth-logo">
                                    <img src="/admin/images/logo-light.png" alt="" height="20">
                                </a>
                            </div>
                            <p class="mt-3 fs-15 fw-medium">EBook Travel</p>
                        </div>
                    </div>
                </div>

                <div class="row justify-content-center">
                    <div class="col-md-8 col-lg-6 col-xl-5">
                        <div class="card mt-4">
                            <div class="card-body p-4">
                                <div class="text-center mt-2">
                                    <h5 class="text-primary">WELCOME</h5>
                                    <p class="text-muted">LOGIN</p>
                                </div>
                                <div class="p-2">
                                    @if (TempData["Error"] != null)
                                    {
                                        <div class="col-md-12 alert alert-danger">
                                            <span><b>Sorry!</b> - @TempData["Error"] </span>
                                        </div>
                                    }
                                    <div class="mb-3">

                                        <form asp-action="Login" asp-controller="Admin" asp-area="admin" method="post" >
                                            <div class="position-relative auth-pass-inputgroup mb-3">
                                                <label asp-for="Email"></label>
                                                <input asp-for="Email" class="form-control" type="email" placeholder="USER NAME" />

                                                <span asp-validation-for="Email" class="text-danger"></span>

                                            </div>
                                            <div class="position-relative auth-pass-inputgroup mb-3">
                                               <label asp-for="Password"></label>
                                                <input asp-for="Password" class="form-control" type="password" placeholder="Password" />
                                                <span asp-validation-for="Password" class="text-danger"></span>

                                            </div>

                                            <div class="mt-4">
                                                <button class="btn btn-success w-100" type="submit">Login</button>
                                            </div>

                                        </form>
                                    </div>



                                    @* 
                                    <div class="mb-3">
                                        <input type="text" class="form-control" id="username" name="USERNAME" placeholder="USER NAME">
                                    </div>
                                    <div class="mb-3">
                                        <div class="position-relative auth-pass-inputgroup mb-3">
                                            <input type="password" class="form-control pe-5 password-input" placeholder="PASSWORD" name="PASSWORD" id="password-input">
                                            <button class="btn btn-link position-absolute end-0 top-0 text-decoration-none text-muted password-addon" type="button" id="password-addon"><i class="ri-eye-fill align-middle"></i></button>
                                        </div>
                                        <div class="float-end">
                                        <a href="#" class="text-muted">DO YOU PASSWORD</a>
                                        </div>
                                    </div>
 *@
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" value="" id="auth-remember-check">
                                        <label class="form-check-label" for="auth-remember-check">Remember me</label>
                                    </div>

                                 @*    <div class="mt-4">
                                        <button class="btn btn-success w-100" type="button" onclick="Login()">Login</button>
                                    </div> *@
                                </div>
                            </div>

                        </div>

                    </div>
                </div>
            </div>
        </div>

        <footer class="footer" id="layoutAuthentication_footer">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="text-center">
                            <p class="mb-0 text-muted">
                                &copy;
                                2023 <a href="#" target="_blank">KOMSOFT</a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </footer>
    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.3/jquery.min.js"></script>
    <script src="/ajax/jquery.unobtrusive-ajax.min.js"></script>
    <script src="/admin/libs/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="/admin/libs/simplebar/simplebar.min.js"></script>
    <script src="/admin/libs/node-waves/waves.min.js"></script>
    <script src="/admin/libs/feather-icons/feather.min.js"></script>
    <script src="/admin/js/pages/plugins/lord-icon-2.1.0.js"></script>
    <script src="/admin/js/plugins.js"></script>
    <script src="/bootbox/bootbox.all.min.js"></script>
    <script src="/admin/libs/sweetalert2/sweetalert2.min.js"></script>
    <script src="/admin/js/pages/sweetalerts.init.js"></script>
    <script src="/admin/js/scripts.js"></script>
    <script src="/admin/js/custom.js"></script>

    <script src="/admin/libs/particles.js/particles.js"></script>
    <script src="/admin/js/pages/particles.app.js"></script>
    <script src="/admin/js/pages/password-addon.init.js"></script>

    <script>

        $(document).ready(function () {

            if ("@(showBanner)" == 'True') {
                Kom.AlertBox.Warning({
                    title: 'Cookie Permission!',
                    message: 'You need to allow cookies before logging into your user account.',
                    okButton: {
                        text: 'Accept',
                        func: function () {
                            document.cookie = "@(cookieString)";
                        }
                    }
                });
            }

        });

        function Login() {

            var userName = $('input[name=USERNAME]').val();
            var password = $('input[name=PASSWORD]').val();

            if (userName == '' || password == '') {
                Kom.MessageBox.Error('Username or password cannot be left blank.');
                return false;
            }

            AjaxAction({
                type: 'POST',
                url: '/Login/UserControl',
                data: { userName, password, __RequestVerificationToken: $("input[name='__RequestVerificationToken']").val() },
                sucFunc: function (result) {
                    location.href = "/";
                }
            });
        }
    </script>
</body>

</html>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

}
    Layout = "_LayoutAdmin";

    GridViewModel gridModel = new GridViewModel
    {
        GridId = "VehicleCategory",
        AllowExcelExport = true,
        AllowGrouping = true,
        IsAllowToDelete = false,
        AllowToShowDetails = true,
        Url = "GetVehicleCategoryList",
        UpdateUrl = "SaveVehicleCategory",
        InsertUrl = "SaveVehicleCategory",
        RemoveUrl = "",

        Columns = new()
        {
            new() { Field = "id", ColumnType = GridViewModel.GridColumnType.ID, Width = "100", Visiable = false },
            new() { Field = "name", HeaderText = "Name", Width = "100" },
            new() { Field = "seateCount", HeaderText = "Seate Count", Width = "100" },
            new() { Field = "suitcaseCount", HeaderText = "Suitcase Count", Width = "100" },
            new() { Field = "maxDistance", HeaderText = "Max Distance", Width = "100" },

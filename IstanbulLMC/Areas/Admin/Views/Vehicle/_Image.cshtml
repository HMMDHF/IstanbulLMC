@model VehicleCategory

<div class="row">
    <div class="col-lg-12">
        <form asp-action="ImageSave" asp-controller="Vehicle" asp-area="admin" data-ajax="true" data-ajax-method="POST" data-ajax-begin="FormBegin" data-ajax-success="FormSuccess" method="post" enctype="multipart/form-data">
            <input asp-for="ID" type="hidden"/>
            <div class="card">
                <div class="card-body">
                    <div class="row g-12">
                        <div class="col-xxl-12 col-md-12">
                            <!-- Responsive Images -->
                            <img src="\assets\images\@Model.Image" class="img-fluid" alt="Responsive image">
                        </div><!--end col-->
                    </div><!--end row-->
                </div><!--end card-body-->
                <div class="card-body">
                    <div class="row g-12">
                        <div class="col-xxl-12 col-md-12">
                            <input name="img" type="file" multiple="multiple">
                        </div><!--end col-->
                    </div><!--end row-->
                </div><!--end card-body-->
                <div class="card-body">
                    <div class="row g-12">
                        <div class="col-xxl-12 col-md-12">
                            <button type="submit" class="btn btn-primary">
                                Save
                            </button>
                        </div><!--end col-->
                    </div><!--end row-->
                </div><!--end card-body-->
            </div><!--end card-->
        </form>
    </div><!--end col-->
</div><!--end row-->
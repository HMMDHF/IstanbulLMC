@model TransferDTO

<style>
    .switch {
        position: relative;
        display: inline-block;
        width: 60px;
        height: 34px;
        margin-left: auto;
    }

        .switch input {
            opacity: 0;
            width: 0;
            height: 0;
        }

    .slider {
        position: absolute;
        justify-content: left;
        cursor: pointer;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-color: #ccc;
        transition: .4s;
        border-radius: 34px;
    }

        .slider:before {
            position: absolute;
            content: "";
            height: 26px;
            width: 26px;
            left: 4px;
            bottom: 4px;
            background-color: white;
            transition: .4s;
            border-radius: 50%;
        }

    input:checked + .slider {
        background-color: #ffa801;
    }

    input:focus + .slider {
        box-shadow: 0 0 1px #ffa801;
    }

    input:checked + .slider:before {
        transform: translateX(26px);
    }

    .hizmetler {
        display: none;
    }

    .hizmet {
        background-color: #ffffff;
        padding: 10px;
        margin-bottom: 5px;
        border-radius: 5px;
        display: flex;
        justify-content: space-between;
        box-shadow: 0 2px 5px rgba(0,0,0,0.1);
    }
</style>

<section class="page-header" style="background-image: url(/assets/images/backgrounds/page-header-contact.jpg);">
    <div class="container">
        <h2>Tours with Sidebar</h2>
        <ul class="thm-breadcrumb list-unstyled">
            <li><a href="index.html">Home</a></li>
            <li><span>Transfer</span></li>
        </ul><!-- /.thm-breadcrumb -->
    </div><!-- /.container -->
</section><!-- /.page-header -->

<section class="tour-two tour-list">
    <div class="container">
        <div class="row">
            <div class="col-lg-7">
                <div class="tour-sidebar">
                    <div class="tour-sidebar__search tour-sidebar__single">
                        <h3>Book This Tour</h3>
                        <form asp-action="CustomerApplicationSave" asp-controller="Customer" method="post" class="tour-sidebar__search-form needs-validation">
                            <input asp-for="Distance" type="hidden" />
                            <input asp-for="FromPlace" type="hidden" />
                            <input asp-for="FromPlaceID" type="hidden" />
                            <input asp-for="ToPlace" type="hidden" />
                            <input asp-for="ToPlaceID" type="hidden" />
                            <input asp-for="PassengersCount" type="hidden" />
                            <input asp-for="Date" type="hidden" />
                            <input asp-for="RoundTripDate" type="hidden" />
                            <input asp-for="Duration" type="hidden" />
                            <input asp-for="VehicleCategoryID" type="hidden" />

                            <div class="input-group">
                                <input asp-for="Name" placeholder="Your Name" class="form-control" required>
                            </div><!-- /.input-group -->

                            <div class="input-group">
                                <input asp-for="Tel" placeholder="Phone" class="form-control" required>
                            </div><!-- /.input-group -->

                            <div class="input-group">
                                <input asp-for="FlieghtNo" placeholder="FlieghtNo">
                            </div><!-- /.input-group -->

                            <div class="input-group">
                                <textarea asp-for="Message" placeholder="Message"></textarea>
                            </div><!-- /.input-group -->


                            <div class="input-group">
                                <h3>Ek Hizmetler</h3>
                                <label class="switch">
                                    <input type="checkbox" id="toggle">
                                    <span class="slider"></span>
                                </label>
                            </div>
                            <div id="hizmetler" class="hizmetler">
                                <div class="hizmet" data-hizmet-adi="karsilama">
                                    <label>
                                        <input type="radio" name="hizmet-secenek" value="karsilama">
                                        <span>Karşılama Hizmeti</span>
                                    </label>
                                    <span>60₺</span>
                                </div>
                                <!-- Diğer hizmet div'leri benzer şekilde düzenlenecek -->
                                <div class="hizmet" data-hizmet-adi="karsilama">
                                    <label>
                                        <input type="checkbox" name="hizmet-secenek" value="karsilama2">
                                        <span>Karşılama Hizmeti </span>
                                    </label>
                                    <span>60₺</span>
                                </div>
                                <!-- Daha fazla hizmet ekleyebilirsiniz -->
                            </div>



                            <div class="input-group">
                                <ul class="tour-one__meta list-unstyled">
                                    @for (int i = 0; i < Model.Services.Count; i++)
                                    {
                                        <li>
                                            <input asp-for="@Model.Services[i].IsSelected" type="checkbox">
                                            <input asp-for="@Model.Services[i].ID" type="hidden">
                                            <i class="@Model.Services[i].Icon" style="color: #9ca3a9;"></i>  @Model.Services[i].Name - @Model.Services[i].Price $
                                        </li>
                                    }
                                </ul><!-- /.tour-one__meta -->
                            </div><!-- /.input-group -->

                            <div class="input-group">
                                <input asp-for="DriverTrip" placeholder="DriverTrip">
                            </div><!-- /.input-group -->

                            <div class="input-group">
                                <button type="submit" class="thm-btn onSubmit">Book Now</button>
                            </div><!-- /.input-group -->
                        </form>
                    </div><!-- /.tour-sidebar__search -->
                </div><!-- /.tour-sidebar -->
            </div><!-- /.col-lg-4 -->

            <div class="col-lg-5">
                <partial name="_Sidebar" model="@Model" />

                <div class="tour-sidebar">
                    <div class="tour-sidebar__sorter-wrap">

                        <div class="tour-sidebar__sorter-single">
                            <div class="tour-sidebar__sorter-top">
                                <h3>Payment Details</h3>
                            </div><!-- /.tour-sidebar__sorter-top -->
                            <div class="tour-sidebar__sorter-content">

                                <div class="tour-sidebar__sorter-inputs">
                                    <div class="row">
                                        <div class="col-6">
                                            @Model.Vehicle
                                        </div>

                                        <div class="col-6">
                                            @Model.TotalPrice
                                        </div>
                                    </div>

                                    @if (Model.RoundTripDate != null)
                                    {
                                        <div class="row">
                                            <div class="col-6">
                                                Return
                                            </div>

                                            <div class="col-6">
                                                @Model.RoundTripDate
                                            </div>
                                        </div>
                                    }

                                    <div class="row">
                                        <div class="col-6">
                                            Distance
                                        </div>

                                        <div class="col-6">
                                            @Model.Distance KM
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-6">
                                            Duration
                                        </div>

                                        <div class="col-6">
                                            @Model.Duration
                                        </div>
                                    </div>
                                    @if (!string.IsNullOrEmpty(Model.Vehicle))
                                    {
                                        <div class="row">
                                            <div class="col-6">
                                                Vehicle
                                            </div>

                                            <div class="col-6">
                                                @Model.Vehicle
                                            </div>
                                        </div>
                                    }

                                </div><!-- /.tour-sidebar__sorter-inputs -->
                            </div><!-- /.tour-sidebar__sorter-content -->

                            <div class="tour-sidebar__sorter-content list-unstyled" style="border-top: 1px solid rgb(236, 238, 239);">
                                <div class="row">
                                    <div class="col-6">
                                        Total
                                    </div>

                                    <div class="col-6">
                                        @Model.TotalPrice
                                    </div>
                                </div>
                            </div><!-- /.tour-sidebar__sorter-top -->

                        </div>

                    </div><!-- /.tour-sidebar__sorter-wrap -->
                </div><!-- /.tour-sidebar -->
            </div><!-- /.col-lg-4 -->

        </div><!-- /.row -->
    </div><!-- /.container -->
</section><!-- /.tour-two -->
<script>
    // scripts.js dosyasına kaydedilecek
    document.addEventListener('DOMContentLoaded', function () {
        var toggle = document.getElementById('toggle');
        var hizmetler = document.getElementById('hizmetler');
        toggle.addEventListener('change', function () {
            if (this.checked) {
                hizmetler.style.display = 'block';
            } else {
                hizmetler.style.display = 'none';
            }
        });
    });
    document.addEventListener('DOMContentLoaded', function () {
        var hizmetSecenekleri = document.querySelectorAll('input[name="hizmet-secenek"]');
        hizmetSecenekleri.forEach(function (secenek) {
            secenek.addEventListener('change', function () {
                if (this.checked) {
                    console.log(this.value + ' hizmeti seçildi.');
                }
            });
        });
    });
</script>
@model TransferDTO


<section class="page-header" style="background-image: url(/assets/images/backgrounds/page-header-contact.jpg);">
    <div class="container">
        <h2>Tours with Sidebar</h2>
        <ul class="thm-breadcrumb list-unstyled">
            <li><a href="index.html">Home</a></li>
            <li><span>Transfer</span></li>
        </ul><!-- /.thm-breadcrumb -->
    </div><!-- /.container -->
</section><!-- /.page-header -->
<style>
    .switch {
        position:relative;  
        display: inline-block;
        width: 60px;
        height: 34px;
        margin-left: auto;
    }

        .switch input {
            opacity: 0;
            width: 0;
            height: 0;
        }

    .slider {
        position: absolute;
        justify-content:left;
        cursor: pointer;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-color: #ccc;
        transition: .4s;
        border-radius: 34px;
    }

        .slider:before {
            position: absolute;
            content: "";
            height: 26px;
            width: 26px;
            left: 4px;
            bottom: 4px;
            background-color: white;
            transition: .4s;
            border-radius: 50%;
        }

    input:checked + .slider {
        background-color: #ffa801;
    }

    input:focus + .slider {
        box-shadow: 0 0 1px #ffa801;
    }

    input:checked + .slider:before {
        transform: translateX(26px);
    }

    .hizmetler {
        display: none;
    }

    .hizmet {
        background-color: #ffffff;
        padding: 10px;
        margin-bottom: 5px;
        border-radius: 5px;
        display: flex;
        justify-content: space-between;
        box-shadow: 0 2px 5px rgba(0,0,0,0.1);
    }

</style>
<section class="tour-two tour-list">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="tour-sidebar">
                    <div class="tour-sidebar__search tour-sidebar__single">
                        <h3>Book This Tour</h3>
                        <form asp-action="CustomerApplicationSave" asp-controller="Customer" method="post" class="tour-sidebar__search-form">
                            <input asp-for="Distance" type="hidden" />
                            <input asp-for="FromPlace" type="hidden" />
                            <input asp-for="FromPlaceID" type="hidden" />
                            <input asp-for="ToPlace" type="hidden" />
                            <input asp-for="ToPlaceID" type="hidden" />
                            <input asp-for="PassengersCount" type="hidden" />
                            <input asp-for="Date" type="hidden" />
                            <input asp-for="RoundTripDate" type="hidden" />
                            <input asp-for="Duration" type="hidden" />
                            <input asp-for="VehicleCategoryID" type="hidden" />

                            <div class="input-group">
                                <input asp-for="Name" placeholder="Your Name">
                            </div><!-- /.input-group -->

                            <div class="input-group">
                                <input asp-for="Tel" placeholder="Phone"> 
                            </div><!-- /.input-group -->

                            <div class="input-group">
                                <input asp-for="Tel" data-provide="datepicker" placeholder="dd/mm/yy">
                            </div><!-- /.input-group -->

                            <div class="input-group">
                                <input asp-for="FlieghtNo" placeholder="FlieghtNo">
                            </div><!-- /.input-group -->

                            <div class="input-group">
                                <textarea asp-for="Message" placeholder="Message"></textarea>
                            </div><!-- /.input-group -->


                            <div class="input-group">   
                                <h3>Ek Hizmetler</h3>
                                <label class="switch">
                                    <input type="checkbox" id="toggle">
                                    <span class="slider"></span>
                                </label>
                            </div>
                            <div id="hizmetler" class="hizmetler">
                                <div class="hizmet" data-hizmet-adi="karsilama">
                                    <label>
                                        <input type="radio" name="hizmet-secenek" value="karsilama">
                                        <span>Karşılama Hizmeti</span>
                                    </label>
                                    <span>60₺</span>
                                </div>
                                <!-- Diğer hizmet div'leri benzer şekilde düzenlenecek -->
                                <div class="hizmet" data-hizmet-adi="karsilama">
                                    <label>
                                        <input type="checkbox" name="hizmet-secenek" value="karsilama2">
                                        <span>Karşılama Hizmeti </span>
                                    </label>
                                    <span>60₺</span>
                                </div>
                                <!-- Daha fazla hizmet ekleyebilirsiniz -->
                            </div>

                          
                            <div class="input-group">
                                <button type="submit" class="thm-btn">Book Now</button>
                            </div><!-- /.input-group -->
                        </form>
                    </div><!-- /.tour-sidebar__search -->
                </div><!-- /.tour-sidebar -->
            </div><!-- /.col-lg-4 -->

            <div class="col-lg-4">
                <div class="tour-sidebar">
                    <div class="tour-sidebar__sorter-wrap">

                        <div class="tour-sidebar__sorter-single">
                            <div class="tour-sidebar__sorter-top">
                                <h3>Transfer Summary</h3>
                                <button class="tour-sidebar__sorter-toggler"><i class="fa fa-angle-down"></i></button>
                                <!-- /.tour-sidebar__sorter-toggler -->
                            </div><!-- /.tour-sidebar__sorter-top -->
                            <div class="tour-sidebar__sorter-content">

                                <div class="tour-sidebar__sorter-inputs">
                                    <div class="row">
                                        <div class="col-6">
                                            From
                                        </div>
                                        
                                        <div class="col-6">
                                            @Model.FromPlace
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-6">
                                            TO
                                        </div>

                                        <div class="col-6">
                                            @Model.ToPlace
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-6">
                                            Distance
                                        </div>

                                        <div class="col-6">
                                            @Model.Distance KM
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-6">
                                            Duration
                                        </div>

                                        <div class="col-6">
                                            @Model.Duration
                                        </div>
                                    </div>
                                </div><!-- /.tour-sidebar__sorter-inputs -->
                            </div><!-- /.tour-sidebar__sorter-content -->

                        </div><!-- /.tour-sidebar__sorter-single -->
                        <div class="tour-sidebar__sorter-single">
                            <div class="tour-sidebar__sorter-top">
                                <h3>Duration</h3>
                                <button class="tour-sidebar__sorter-toggler"><i class="fa fa-angle-down"></i></button>
                                <!-- /.tour-sidebar__sorter-toggler -->
                            </div><!-- /.tour-sidebar__sorter-top -->
                            <div class="tour-sidebar__sorter-content">

                                <div class="tour-sidebar__sorter-inputs">
                                    <p>
                                        <input type="checkbox" id="duration-5" name="radio-group">
                                        <label for="duration-5">
                                            0 - 24 hours
                                        </label>
                                    </p>
                                    <p>
                                        <input type="checkbox" id="duration-4" name="radio-group">
                                        <label for="duration-4">
                                            1 - 2 days

                                        </label>
                                    </p>
                                    <p>
                                        <input type="checkbox" id="duration-3" name="radio-group">
                                        <label for="duration-3">
                                            2 - 3 days

                                        </label>
                                    </p>
                                    <p>
                                        <input type="checkbox" id="duration-2" name="radio-group">
                                        <label for="duration-2">
                                            4 - 5 days


                                        </label>
                                    </p>
                                    <p>
                                        <input type="checkbox" id="duration-1" name="radio-group">
                                        <label for="duration-1">
                                            5 - 10 days
                                        </label>
                                    </p>
                                </div><!-- /.tour-sidebar__sorter-inputs -->
                            </div><!-- /.tour-sidebar__sorter-content -->

                        </div><!-- /.tour-sidebar__sorter-single -->

                    </div><!-- /.tour-sidebar__sorter-wrap -->
                </div><!-- /.tour-sidebar -->
            </div><!-- /.col-lg-4 -->
        </div><!-- /.row -->
    </div><!-- /.container -->
</section><!-- /.tour-two -->
<script>
    // scripts.js dosyasına kaydedilecek
    document.addEventListener('DOMContentLoaded', function () {
        var toggle = document.getElementById('toggle');
        var hizmetler = document.getElementById('hizmetler');

        toggle.addEventListener('change', function () {
            if (this.checked) {
                hizmetler.style.display = 'block';
            } else {
                hizmetler.style.display = 'none';
            }
        });
    });


    document.addEventListener('DOMContentLoaded', function () {
        var hizmetSecenekleri = document.querySelectorAll('input[name="hizmet-secenek"]');

        hizmetSecenekleri.forEach(function (secenek) {
            secenek.addEventListener('change', function () {
                if (this.checked) {
                    console.log(this.value + ' hizmeti seçildi.');
                }
            });
        });
    });


</script>